{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build",
      "command": "g++",
      "args": [
        "*.cpp",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "-std=c++14",
        "-g"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "isDefault": true,
        "kind": "build"
      }
    }
  ]
}
